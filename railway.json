{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "./transcoder",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": {
    "transcoder": {
      "source": "./services/transcoder",
      "build": {
        "buildCommand": "go build -o transcoder main.go"
      },
      "deploy": {
        "startCommand": "./transcoder"
      },
      "variables": {
        "PORT": "8080",
        "OUTPUT_DIR": "/tmp/output"
      }
    },
    "stream-processor": {
      "source": "./services/stream-processing", 
      "build": {
        "buildCommand": "go build -o processor main.go"
      },
      "deploy": {
        "startCommand": "./processor"
      },
      "variables": {
        "PORT": "8081"
      }
    },
    "user-management": {
      "source": "./services/user-management",
      "build": {
        "buildCommand": "go build -o users main.go"
      },
      "deploy": {
        "startCommand": "./users"
      },
      "variables": {
        "PORT": "8083"
      }
    },
    "web": {
      "source": "./web",
      "build": {
        "builder": "STATIC"
      },
      "variables": {
        "API_URL": "${{stream-processor.RAILWAY_STATIC_URL}}"
      }
    }
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "GO_ENV": "production"
      }
    }
  }
} 